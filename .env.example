# ===========================================
# Environment Variables Configuration
# ===========================================
# Copy this file to .env and fill in your values
# IMPORTANT: NEVER commit .env files with real values!
# ===========================================

# ===========================================
# Application Settings
# ===========================================
NODE_ENV=development
VITE_APP_ID=your_app_id_here

# ===========================================
# Database Configuration
# ===========================================
# MySQL/TiDB connection string
# Format: mysql://username:password@host:port/database
DATABASE_URL=mysql://user:password@localhost:3306/erp_database

# ===========================================
# Authentication & Security
# ===========================================
# JWT Secret for token signing (use a strong random string, min 32 chars)
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_min_32_characters

# OAuth Configuration (if using external OAuth)
OAUTH_SERVER_URL=https://your-oauth-server.com
OWNER_OPEN_ID=your_owner_open_id

# ===========================================
# API Services
# ===========================================
# Forge API Configuration
BUILT_IN_FORGE_API_URL=https://api.forge.example.com
BUILT_IN_FORGE_API_KEY=your_forge_api_key_here

# ===========================================
# Email Service (Resend)
# ===========================================
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@yourdomain.com

# ===========================================
# SMS/WhatsApp Service (Twilio)
# ===========================================
# Get your credentials from: https://console.twilio.com
TWILIO_ACCOUNT_SID=AC_your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_MESSAGING_SERVICE_SID=MG_your_messaging_service_sid
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# Optional: Logging & Monitoring
# ===========================================
# LOG_LEVEL=debug
# SENTRY_DSN=https://your-sentry-dsn

# ===========================================
# Optional: Feature Flags
# ===========================================
# ENABLE_EMAIL_NOTIFICATIONS=true
# ENABLE_SMS_NOTIFICATIONS=true
# ENABLE_WHATSAPP_NOTIFICATIONS=false
